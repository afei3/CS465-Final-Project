<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".group_search_and_select.Group1FeedbackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="50dp"
        android:textSize="50sp"
        android:text="Success!"
        android:fontFamily="@font/opensans_1"
        android:textColor="@color/black"
        android:layout_gravity="center" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:text="You have successfully added preferences to your profile. Groups that match your criteria will appear higher on the list for you now."
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="190dp" />

    <Button
        android:id="@+id/add_new_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Sport"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:backgroundTint="@color/sportinate_gold"
        />

    <Button
        android:id="@+id/browse_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back to Profile"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:backgroundTint="@color/sportinate_gold"
        />

</LinearLayout>
</ScrollView>