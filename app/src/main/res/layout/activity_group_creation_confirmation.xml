<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:textSize="50sp"
        android:text="Success!"
        android:fontFamily="@font/opensans_1"
        android:textColor="@color/black"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have now finished creating this group."
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">
    <Button
        android:id="@+id/create_another_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Another Group"
        android:textSize="20sp"
        android:textAllCaps="false"

        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:backgroundTint="@color/sportinate_gold"
        />

    <Button
        android:id="@+id/browse_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse Groups"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/sportinate_gold"
        />
    </LinearLayout>


</LinearLayout>