<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".group_search_and_select.Group1LeaveFeedbackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="40dp"
        android:textSize="50sp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:layout_gravity="center" />


    <EditText
        android:id="@+id/text_input_email"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:inputType="text"
        android:hint="illinois email"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />
    <EditText
        android:id="@+id/text_input_firstname"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:inputType="text"
        android:hint="first name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />
    <EditText
        android:id="@+id/text_input_lastname"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:inputType="text"
        android:hint="last name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />
    <EditText
        android:id="@+id/text_input_password"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:inputType="text"
        android:hint="password"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="left"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:backgroundTint="@color/sportinate_gold"
        />

</LinearLayout>